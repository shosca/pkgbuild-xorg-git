# Contributor: Emmanuel Gil Peyrot <linkmauve@linkmauve.fr>

_gitroot="git://anongit.freedesktop.org/wayland/weston"
_gitname="repo-weston"

pkgname=weston
pkgver=1.10.0.9.r5093.gc25f72d
pkgrel=4
pkgdesc="Reference implementation of a Wayland compositor"
arch=('i686' 'x86_64')
url="http://wayland.freedesktop.org"
license=('MIT')
depends=('libxkbcommon' 'wayland' 'mesa' 'cairo' 'libunwind'
         'poppler-glib' 'mtdev' 'libinput' 'libxcursor' 'pixman'
         'glu' 'freerdp' 'libice')
makedepends=('git')
source=($_gitname::$_gitroot)
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  printf "%s.r%s.%s" "$(git describe --long | cut -d "-" -f1-2 | tr - .)" \
    "$(git rev-list HEAD --count)" \
    "$(git describe --long | cut -d "-" -f3)"
}

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh \
    --prefix=/usr \
    --libexecdir=/usr/lib/weston \
    --enable-libinput-backend \
    --enable-xwayland \
    --enable-rdp-compositor \
    --disable-static \
    --disable-setuid-install \
    --disable-android-compositor

  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}

# vim: ft=sh syn=sh et
