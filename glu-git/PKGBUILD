# Maintainer: Christoph Haag <haagch at studi.informatik.uni-stuttgart.de>

_gitroot="git://cgit.freedesktop.org/mesa/glu/"
_gitname="glu"

pkgname=glu-git
pkgver=r198.0692115
pkgrel=127
pkgdesc="GL utility library for mesa builds from git after 2012-08-31"
arch=('i686' 'x86_64')
url="http://mesa.freedesktop.org/"
license=('LGPL')
provides=('glu')
depends=('mesa-libgl-git' 'gcc-libs')
makedepends=('git')
conflicts=('glu')
options=(!libtool)
source=($_gitroot)
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}

# vim: ft=sh syn=sh et

