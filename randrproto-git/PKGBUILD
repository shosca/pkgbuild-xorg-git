_realver=1.4.0
_gitroot='git://git.freedesktop.org/git/xorg/proto/randrproto'
_gitname='randrproto'

pkgname=randrproto-git
pkgver=20140327
pkgrel=1001
pkgdesc='X11 composite extention protocol specification and header files'
url='http://xorg.freedesktop.org/'
arch=('any')
license=('custom')
makedepends=('xorg-util-macros' 'git')
provides=('randrproto=${_realver}')
conflicts=('randrproto')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

