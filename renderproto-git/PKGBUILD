_realver=0.11.1
_gitroot='git://git.freedesktop.org/git/xorg/proto/renderproto'
_gitname='renderproto'

pkgname=renderproto-git
pkgver=20140311
pkgrel=1058
pkgdesc='X11 composite extention protocol specification and header files'
url='http://xorg.freedesktop.org/'
arch=('any')
license=('custom')
makedepends=('xorg-util-macros-git' 'git')
provides=('renderproto=${_realver}')
conflicts=('renderproto')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

