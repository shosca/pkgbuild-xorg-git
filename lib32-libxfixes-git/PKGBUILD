# $Id: PKGBUILD 151418 2012-02-26 10:42:43Z pierre $
#Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=5.0.1
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXfixes"
_gitname="libXfixes"

pkgname=lib32-libxfixes-git
pkgver=20140129
pkgrel=0555
pkgdesc="X11 miscellaneous 'fixes' extension library"
arch=('x86_64')
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('lib32-libx11' 'fixesproto>=5.0')
makedepends=('xorg-util-macros-git')
provides=('lib32-libxfixes=${_realver}')
conflicts=('lib32-libxfixes')
options=('!libtool')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  ./autogen.sh \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --sysconfdir=/etc \
    --disable-static

  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  rm -rf "${pkgdir}"/usr/{include,share}
}
# vim: ft=sh syn=sh et

