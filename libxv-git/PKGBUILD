# $Id: PKGBUILD 152795 2012-03-09 16:32:25Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.0.10
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXv"
_gitname="libXv"

pkgname=libxv-git
pkgver=20140327
pkgrel=0954
pkgdesc="X11 Video extension library"
arch=('i686' 'x86_64')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('libxext-git' 'videoproto-git')
makedepends=('pkgconfig' 'xorg-util-macros-git' 'git')
options=('!libtool')
provides=('libxv=${_realver}')
conflicts=('libxv')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --disable-static 
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}

# vim: ft=sh syn=sh et

