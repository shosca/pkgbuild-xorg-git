_realver=1.1.2
_gitroot='git://git.freedesktop.org/git/xorg/proto/bigreqsproto'
_gitname='bigreqsproto'

pkgname=bigreqsproto-git
pkgver=20140327
pkgrel=0929
pkgdesc='X11 DRI extension wire protocol.'
url='http://xorg.freedesktop.org/'
arch=('any')
license=('custom')
makedepends=('xorg-util-macros-git' 'git' 'xmlto' 'docbook-xml')
provides=('bigreqsproto=${_realver}')
conflicts=('bigreqsproto')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

