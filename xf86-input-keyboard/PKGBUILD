# Maintainer: Det <who@cares.com>
# Contributor: <Eugeny Borisov flekst@gmail.com>
# Based on [extra]'s xf86-input-keyboard

_gitroot=git://anongit.freedesktop.org/xorg/driver/xf86-input-keyboard
_gitname=repo-xf86-input-keyboard

pkgname=xf86-input-keyboard
pkgver=1.8.1.4.r245.g9ab8998
pkgrel=12
pkgdesc="X.Org keyboard Input driver - Git version"
arch=('i686' 'x86_64')
url="http://cgit.freedesktop.org/xorg/driver/xf86-input-keyboard/"
license=('custom')
depends=('glibc')
makedepends=('xorg-server-devel' 'resourceproto' 'scrnsaverproto' 'git')
groups=('xorg-drivers' 'xorg')
source=($_gitname::$_gitroot)
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  printf "%s.r%s.%s" "$(git describe --long | cut -d "-" -f4-5 | tr - .)" \
    "$(git rev-list HEAD --count)" \
    "$(git describe --long | cut -d "-" -f6)"
}

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package(){
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}
# vim: ft=sh syn=sh et

