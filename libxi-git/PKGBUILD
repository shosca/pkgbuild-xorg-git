# $Id: PKGBUILD 158868 2012-05-12 16:25:29Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.7.2
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXi"
_gitname="libXi"
pkgname=libxi-git
pkgver=20140321
pkgrel=0607
pkgdesc="X11 Input extension library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org"
depends=('libxext-git' 'libxfixes-git' 'inputproto-git')
makedepends=('pkgconfig' 'xorg-util-macros-git' 'git')
options=(!libtool)
license=('custom')
provides=('libxi=${_realver}')
conflicts=('libxi')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
# vim: ft=sh syn=sh et

