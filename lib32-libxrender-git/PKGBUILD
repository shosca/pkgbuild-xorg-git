# $Id: PKGBUILD 152786 2012-03-09 16:24:03Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=0.9.8
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXrender"
_gitname="libXrender"

pkgname=lib32-libxrender-git
pkgver=20140327
pkgrel=1016
pkgdesc="X Rendering Extension client library"
arch=('x86_64')
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('lib32-libx11-git' 'libxrender-git')
provides=('lib32-libxrender=${_realver}')
conflicts=('lib32-libxrender')
makedepends=('git' 'xorg-util-macros-git' 'pkgconfig')
options=('!libtool')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  ./autogen.sh \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --disable-static

  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR=${pkgdir} install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"

  rm -rf "${pkgdir}"/usr/{include,share}
}

# vim: ft=sh syn=sh et

