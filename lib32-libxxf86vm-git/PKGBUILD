# $Id: PKGBUILD 152801 2012-03-09 16:38:21Z andyrtr $
#Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.1.3
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXxf86vm"
_gitname="libXxf86vm"

pkgname=lib32-libxxf86vm-git
pkgver=20131127
pkgrel=0918
pkgdesc="X11 XFree86 video mode extension library"
arch=('x86_64')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('lib32-libxext' 'xf86vidmodeproto>=2.3.1')
makedepends=('xorg-util-macros-git')
options=('!libtool')
provides=('lib32-libxxf86vm=${_realver}')
conflicts=('lib32-libxxf86vm')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  ./autogen.sh \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --sysconfdir=/etc \
    --disable-static

  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  rm -rf "${pkgdir}"/usr/{include,share}
}

# vim: ft=sh syn=sh et
