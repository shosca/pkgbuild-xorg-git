_realver=1.2.0
_gitroot='git://git.freedesktop.org/git/xorg/proto/resourceproto'
_gitname='resourceproto'

pkgname=resourceproto-git
pkgver=20140327
pkgrel=1002
pkgdesc='X11 composite extention protocol specification and header files'
url='http://xorg.freedesktop.org/'
arch=('any')
license=('custom')
makedepends=('xorg-util-macros-git' 'git')
provides=('resourceproto=${_realver}')
conflicts=('resourceproto')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

