# Contributor: Flamelab <panosfilip at gmail dot com>

_gitroot='git://github.com/anholt/libepoxy'
_gitname='libepoxy'

pkgname=libepoxy-git
pkgver=r244.8bbc0d4
pkgrel=11
pkgdesc="Epoxy is a library for handling OpenGL function pointer management for you"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
depends=('libx11-git' 'mesa-git')
makedepends=('git' 'xorg-util-macros-git' 'python2')
provides=('libepoxy')
conflicts=('libepoxy')
replaces=('libepoxy')
license=('custom')
source=($_gitroot)
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh \
    --prefix=/usr \
    --disable-static

  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}

# vim: ft=sh syn=sh et

