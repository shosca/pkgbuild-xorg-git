# $Id: PKGBUILD 198256 2013-10-30 13:45:51Z allan $
# Maintainer : Ionut Biru <ibiru@archlinux.org>

_realver=1.2.2.pre1
_gitroot="git://anongit.freedesktop.org/vaapi/libva"
_gitname="libva"

pkgname=libva-git
pkgver=20140104
pkgrel=1119
pkgdesc="Video Acceleration (VA) API for Linux"
arch=('i686' 'x86_64')
url="http://freedesktop.org/wiki/Software/vaapi"
license=('MIT')
depends=('libegl' 'libgl' 'libdrm' 'libxfixes')
makedepends=('mesa-git')
optdepends=('libva-vdpau-driver-git: vdpau back-end for nvidia'
            'libva-intel-driver-git: back-end for intel cards')
provides=('libva=${_realver}')
conflicts=('libva')
replaces=('libva')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir" install

  install -m644 -D COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

# vim:set ts=2 sw=2 et:
