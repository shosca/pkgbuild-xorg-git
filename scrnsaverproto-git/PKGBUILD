_realver=1.2.2
_gitroot='git://git.freedesktop.org/git/xorg/proto/scrnsaverproto'
_gitname='scrnsaverproto'

pkgname=scrnsaverproto-git
pkgver=20130402
pkgrel=0725
pkgdesc='X11 composite extention protocol specification and header files'
url='http://xorg.freedesktop.org/'
arch=('any')
license=('custom')
makedepends=('xorg-util-macros' 'git')
provides=('scrnsaverproto=${_realver}')
conflicts=('scrnsaverproto')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

