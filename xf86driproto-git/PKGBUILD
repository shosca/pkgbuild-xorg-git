_realver=2.1.1
_gitroot='git://git.freedesktop.org/git/xorg/proto/xf86driproto'
_gitname='xf86driproto'

pkgname=xf86driproto-git
pkgver=20140303
pkgrel=1307
pkgdesc='X11 composite extention protocol specification and header files'
url='http://xorg.freedesktop.org/'
arch=('any')
license=('custom')
makedepends=('xorg-util-macros-git' 'git')
provides=('xf86driproto=${_realver}')
conflicts=('xf86driproto')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

