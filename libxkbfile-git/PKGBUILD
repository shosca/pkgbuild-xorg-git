# $Id: PKGBUILD 152781 2012-03-09 16:19:36Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.0.8
_gitroot='git://anongit.freedesktop.org/xorg/lib/libxkbfile'
_gitname='libxkbfile'

pkgname=libxkbfile-git
pkgver=20140303
pkgrel=0600
pkgdesc="X11 keyboard file manipulation library"
arch=('i686' 'x86_64')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('libx11-git')
makedepends=('xorg-util-macros-git' 'git')
options=('!libtool')
provides=('libxkbfile=${_realver}')
conflicts=('libxkbfile')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static 
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
# vim: ft=sh syn=sh et

