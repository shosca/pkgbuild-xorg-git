# Maintainer: Perry3D <perry3d@gmail.com>

_gitroot="git://anongit.freedesktop.org/mesa/demos"
_gitname="demos"

pkgname=mesa-demos-git
pkgver=r5981.94437a7
pkgrel=24
pkgdesc="The mesa demos (glxinfo, glxgears, ...), built from the git master branch."
arch=('i686' 'x86_64')
url="http://mesa3d.org/"
license=('LGPL')
depends=('mesa-libgl-git' 'glew-git' 'freeglut-git')
makedepends=('git')
provides=('mesa-demos')
replaces=('mesa-demos')
conflicts=('mesa-demos')
source=($_gitroot)
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"

  make DESTDIR="${pkgdir}" install
}

# vim: ft=sh syn=sh et
