# Arch libdrm Maintainers:
#Jan de Groot
#Andreas Radke

_realver=2.4.52
_gitroot='git://git.freedesktop.org/git/mesa/drm'
_gitname='drm'

pkgname=libdrm-git
pkgver=20140327
pkgrel=0935
pkgdesc="Userspace interface to kernel DRM services"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libpciaccess-git')
makedepends=('git' 'cairo>=1.12.15' 'udev' 'valgrind')
provides=('libdrm=${_realver}')
options=('!libtool')
url="http://dri.freedesktop.org/"
conflicts=('libdrm')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  sed -i 's/PKG_CHECK_MODULES(PTHREADSTUBS, pthread-stubs)//' configure.ac

  ./autogen.sh --prefix=/usr \
      --enable-udev \
      --enable-intel \
      --enable-radeon \
      --enable-nouveau \
      --enable-vmwgfx

  make
}

package() {
  cd "$srcdir/$_gitname"
  make DESTDIR="$pkgdir" install
}
# vim: ft=sh syn=sh et

