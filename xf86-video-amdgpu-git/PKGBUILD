# Previous Contributor: vbmithr
# Contributor: Flamelab <panosfilip at gmail dot com>

_gitroot='git://anongit.freedesktop.org/xorg/driver/xf86-video-amdgpu'
_gitname="xf86-video-amdgpu"

pkgname=xf86-video-amdgpu-git
pkgver=r103.92e7c93
pkgrel=3
pkgdesc="X.org ati video driver"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
depends=('libpciaccess-git' 'libdrm-git' 'udev' 'pixman-git' 'mesa-git')
makedepends=('xorg-server-devel-git' 'xf86driproto-git' 'git' 'glproto-git')
provides=('xf86-video-amdgpu')
conflicts=('xf86-video-amdgpu' 'xorg-server<1.15.99')
replaces=('xf86-video-amdgpu')
license=('custom')
source=($_gitroot)
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install 
}

# vim: ft=sh syn=sh et

