# $Id: PKGBUILD 150821 2012-02-23 07:20:15Z andyrtr $
# Contributor: Jan de Groot <jgc@archlinux.org>
# Maintainer: Gaetan Bisson <bisson@archlinux.org>

_realver=1.2.1
_gitroot="git://anongit.freedesktop.org/xorg/app/xev"
_gitname="xev"

pkgname=xorg-xev-git
pkgver=20131001
pkgrel=0620
pkgdesc='Print contents of X events'
url='http://xorg.freedesktop.org/'
arch=('i686' 'x86_64')
license=('custom')
depends=('libx11>=1.5.99.901' 'libxrandr>=1.4.0')
makedepends=('xorg-util-macros>=1.17' 'xproto>=7.0.23')
groups=('xorg-apps' 'xorg')
provides=('xorg-xev=${_realver}')
conflicts=('xorg-xev')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}

# vim: ft=sh syn=sh et
