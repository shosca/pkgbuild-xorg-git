# $Id: PKGBUILD 152795 2012-03-09 16:32:25Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.0.10
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXv"
_gitname="libXv"

pkgname=lib32-libxv-git
pkgver=20140227
pkgrel=1020
pkgdesc="X11 Video extension library"
arch=('x86_64')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('lib32-libxext-git' 'libxv-git')
makedepends=('pkgconfig' 'xorg-util-macros-git' 'git')
options=('!libtool')
provides=('lib32-libxv=${_realver}')
conflicts=('lib32-libxv')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  ./autogen.sh \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --disable-static 
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  rm -rf "${pkgdir}"/usr/{include,share}
}

# vim: ft=sh syn=sh et

