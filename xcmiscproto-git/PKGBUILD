_realver=1.2.2
_gitroot='git://git.freedesktop.org/git/xorg/proto/xcmiscproto'
_gitname='xcmiscproto'

pkgname=xcmiscproto-git
pkgver=20140327
pkgrel=1002
pkgdesc='X11 composite extention protocol specification and header files'
url='http://xorg.freedesktop.org/'
arch=('any')
license=('custom')
makedepends=('xorg-util-macros' 'git')
provides=('xcmiscproto=${_realver}')
conflicts=('xcmiscproto')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}

