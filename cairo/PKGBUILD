# Maintainer: dx <dx@dxzone.com.ar>
# Based on the official cairo package

_gitroot='git://anongit.freedesktop.org/git/cairo'
_gitname='repo-cairo'

pkgname=cairo
pkgver=1.15.2.6.r11308.gaf42fc7
pkgrel=28
pkgdesc="Cairo vector graphics library (git version)"
arch=('i686' 'x86_64')
license=('LGPL' 'MPL')
url="http://cairographics.org/"
depends=('libpng' 'libxrender' 'libxext' 'fontconfig' 'pixman>=0.28.0' 'glib2' 'mesa' 'libgl' 'lzo'
         'xcb-util' 'glib2' 'libedit')
makedepends=('gtk-doc' 'git' 'mesa-libgl' 'librsvg' 'gtk2' 'poppler-glib' 'libspectre' 'gtk-doc' 'valgrind')
options=('!libtool')
provides=('cairo-xcb')
conflicts=('cairo-xcb')
source=($_gitname::$_gitroot)
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  printf "%s.r%s.g%s" \
    "$(git describe --long | cut -d "-" -f1-2 | tr - .)" \
    "$(git rev-list HEAD --count)" \
    "$(git rev-parse --short HEAD)"
}

build() {
  cd "${srcdir}/${_gitname}"

  #https://code.google.com/p/chromium/issues/detail?id=360604
  export CFLAGS="$CFLAGS -ffat-lto-objects"
  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --enable-xcb \
    --enable-tee \
    --enable-gl \
    --enable-gles \
    --enable-egl \
    --disable-static
  make
}

package(){
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}

# vim: ft=sh syn=sh et

