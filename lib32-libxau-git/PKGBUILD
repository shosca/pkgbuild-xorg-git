# $Id: PKGBUILD 152650 2012-03-07 19:44:52Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: Alexander Baldeck <alexander@archlinux.org>

_realver=1.0.8
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXau"
_gitname="libXau"

pkgname=lib32-libxau-git
pkgver=20140327
pkgrel=1014
pkgdesc="X11 authorisation library"
arch=('x86_64')
url="http://xorg.freedesktop.org/"
depends=('glibc' 'xproto-git')
provides=('lib32-libxau=${_realver}')
conflicts=('lib32-libxau')
makedepends=('pkgconfig' 'xorg-util-macros-git' 'git')
license=('custom')
options=('!libtool')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  ./autogen.sh \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --sysconfdir=/etc \
    --disable-static

  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  rm -rf "${pkgdir}"/usr/{include,share}
}
# vim: ft=sh syn=sh et

