# contribution: EdwardXXIV

_realver=0.33.1
_gitroot="git://anongit.freedesktop.org/git/pixman"
_gitname="pixman"

pkgname=lib32-pixman-git
pkgver=20140321
pkgrel=0834
pkgdesc="The pixel-manipulation library for X and cairo"
arch=('x86_64')
url="http://pixman.org/"
license=('GPL')
depends=('lib32-pango' 'glibc')
makedepends=('git' 'autoconf' 'automake' 'libtool' 'pkgconfig')
provides=('lib32-pixman=${_realver}')
conflicts=('lib32-pixman')
replaces=('lib32-pixman')
options=('!libtool')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  ./autogen.sh \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --disable-gtk \
    --disable-static

  make
}

package() {
  cd "$srcdir/$_gitname"
  make DESTDIR="$pkgdir/" install

  rm -rf "${pkgdir}"/usr/{include,share}
}

# vim: ft=sh syn=sh et
