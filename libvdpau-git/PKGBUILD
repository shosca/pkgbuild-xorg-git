# $Id: PKGBUILD 166179 2012-09-05 07:50:49Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_gitroot="git://people.freedesktop.org/~aplattner/libvdpau"
_gitname="libvdpau"

pkgname=libvdpau-git
pkgver=r89.47fd4e8
pkgrel=4
pkgdesc="Nvidia VDPAU library"
arch=('i686' 'x86_64')
url='http://cgit.freedesktop.org/~aplattner/libvdpau'
depends=('gcc-libs' 'libxext-git')
makedepends=('libx11-git' 'git')
conflicts=('nvidia-utils<190.42-2')
license=('custom')
provides=('libvdpau')
conflicts=('libvdpau')
replaces=('libvdpau')
source=($_gitroot)
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -d -m755 "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}

# vim: ft=sh syn=sh et
