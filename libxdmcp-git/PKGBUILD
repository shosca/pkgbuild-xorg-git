# $Id: PKGBUILD 152771 2012-03-09 16:07:19Z andyrtr $
#Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.1.1
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXdmcp"
_gitname="libXdmcp"

pkgname=libxdmcp-git
pkgver=20140311
pkgrel=1058
pkgdesc="X11 Display Manager Control Protocol library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('xproto-git' 'glibc')
makedepends=('xorg-util-macros-git' 'git')
provides=('libxdmcp=${_realver}')
conflicts=('libxdmcp')
options=('!libtool')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
# vim: ft=sh syn=sh et

