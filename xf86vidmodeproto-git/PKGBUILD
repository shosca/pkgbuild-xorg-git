_realver=2.3.1
_gitroot='git://git.freedesktop.org/git/xorg/proto/xf86vidmodeproto'
_gitname='xf86vidmodeproto'

pkgname=xf86vidmodeproto-git
pkgver=20140327
pkgrel=0953
pkgdesc='X11 xf86vidmode extention protocol specification and header files'
url='http://xorg.freedesktop.org/'
arch=('any')
license=('custom')
makedepends=('xorg-util-macros-git' 'git')
provides=('xf86vidmodeproto=${_realver}')
conflicts=('xf86vidmodeproto')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

