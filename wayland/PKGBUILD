# Maintainer: Joel Teichroeb <joel@teichroeb.net>

_gitroot="git://anongit.freedesktop.org/wayland/wayland"
_gitname="repo-wayland"

pkgname=wayland
pkgver=...6.r1854.g8f2da5e
pkgrel=1
pkgdesc="A modern display server."
arch=('i686' 'x86_64')
url="http://wayland.freedesktop.org"
license=('MIT')
depends=('libffi' 'libxml2' 'wayland-protocols')
makedepends=('git' 'expat' 'doxygen')
conflicts=('libwayland')
replaces=('libwayland')
source=($_gitname::$_gitroot)
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  printf "%s.%s.%s.%s.r%s.g%s" \
    "$(git archive --remote=$srcdir/$_gitname HEAD configure.ac | tar -xO | grep "m4_define(\[wayland_major\]" | tr -d '[]()' | tr -s ' ' | cut -d' ' -f2)" \
    "$(git archive --remote=$srcdir/$_gitname HEAD configure.ac | tar -xO | grep "m4_define(\[wayland_minor\]" | tr -d '[]()' | tr -s ' ' | cut -d' ' -f2)" \
    "$(git archive --remote=$srcdir/$_gitname HEAD configure.ac | tar -xO | grep "m4_define(\[wayland_micro\]" | tr -d '[]()' | tr -s ' ' | cut -d' ' -f2)" \
    "$(git rev-list $(git rev-list --tags --no-walk --max-count=1)..HEAD --count)" \
    "$(git rev-list HEAD --count)" \
    "$(git rev-parse --short HEAD)"
}

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr \
    --disable-static \
    --disable-documentation
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
  install -Dm 644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}

# vim: ft=sh syn=sh et
